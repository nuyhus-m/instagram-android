<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:layout_marginBottom="5dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/home_story_ring"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/img_ring"
        app:layout_constraintBottom_toTopOf="@+id/home_story_nickname"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/home_story_profile"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:src="@drawable/ex_photo"
        app:layout_constraintBottom_toTopOf="@+id/home_story_nickname"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/home_story_plus"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/ic_home_story_first"
        app:layout_constraintEnd_toEndOf="@+id/home_story_profile"
        app:layout_constraintBottom_toBottomOf="@id/home_story_profile"/>

    <TextView
        android:id="@+id/home_story_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_story_ring" />
</androidx.constraintlayout.widget.ConstraintLayout>